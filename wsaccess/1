from bs4 import BeautifulSoup
import requests
from selenium import webdriver
from selenium.webdriver.firefox.options import Options

options = Options()
options.headless = True
driver = webdriver.Firefox(options=options)
driver.get('https://www.elibrary.ru/author_items.asp?authorid=679517&show_refs=1&pubrole=100&show_option=0')
link = driver.find_element_by_link_text('2')
link.click()
with open('C:/Users/SZ/Desktop/page_source', 'w', encoding='utf-8') as f:
    f.write(driver.page_source)
